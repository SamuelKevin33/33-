.recipes-content_title{
  border: 4rpx solid #abe1d3;
  width: 100%;
  height: 93rpx;
  margin: 20rpx 0;
  padding: 20rpx;
  box-sizing:border-box;
  color: #abe1d3;
  border-radius:8rpx;
}
.recipes-content_container{
  display: flex;
  justify-content: center;
  width: 100%;
  height: 100%;
}
.recipes-content_form{
  width: 80%;
  height: 100%;
  box-sizing: content-box;
}
.picker-mask{
  /* border: 4rpx solid #eee; */
  width: 160rpx;
  height:50rpx;
}
.recipes-content_select{
  display: flex;
  flex-direction: row;
}
.picker{
  display:flex;
  width:160rpx;
  height:45rpx;
  text-align: center;
  font-size: 32rpx;
  background: #f2fee6;
  color: #888;
  /* border:4rpx solid #eee; */
  margin-bottom:20rpx;
}
.recipes-content_zhengwen{
  border-radius:8rpx;
  background: #abe1d3;
  width: 100%;
  padding: 20rpx;
  box-sizing:border-box;
color:#fff;
letter-spacing: 6rpx;

}
.recipes-text{
  width:100%;
  height: 600rpx;
  overflow: hidden;
}
.recipes-sub-container{
  width:100%;
  display: flex;
  justify-content: flex-end;
}
.recipes_sub-new{
  background: #abe1d3;
  border: 0px;
  margin: 0;
  margin-top:40rpx;
  padding: 6rpx 0;
  width:135rpx;
  text-align:center;
  border-radius:8rpx;
  line-height: 50rpx;
  color:#f2fee6;
  font-size: 30rpx;

}
button::after{
  border:none;
}
.recipes-content_success{
  width:258rpx;
  display:block;
  background:#7e88ac;
  height:80rpx;
  line-height:80rpx;
  text-align:center;
  color:#fff;
  font-size:36rpx;
  margin-top:115rpx;
}
.recipes-content_back{
  margin-top:40rpx;
  text-align:center;
  font-size:36rpx;
  color:#7e88ac;
}